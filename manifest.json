{
    "manifest_version": 3,

    "name": "HTML5 video speed controller",
    "description": "Simple, no-nonsense speed controller for html-5 video in chromium browsers",
    "version": "1.0",
    "icons": { "128": "img.png" },
    "author": "jari", 
    "action": {
        "default_icon": "img.png",
        "default_popup": "speedControllerPopup.html"
    },
    "options_ui": {
        "page": "options.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["pageload.js"]
        }
    ],
    "permissions": ["activeTab", "storage", "scripting"]
}
